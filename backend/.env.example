# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Production URLs (uncomment for production)
# NODE_ENV=production
# FRONTEND_URL=https://ai-trpg.vercel.app
# ALLOWED_ORIGINS=https://ai-trpg.vercel.app

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/aitrpg"

# Production Database (Supabase/Neon.tech example)
# DATABASE_URL="postgresql://username:password@host:5432/database?sslmode=require"

# AI Services (Mastra統合)
OPENAI_API_KEY="your-openai-api-key"
OPENAI_MODEL="gpt-4o-mini"
ANTHROPIC_API_KEY="your-anthropic-api-key"

# Vector Database (RAGシステム用)
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="your-pinecone-environment"

# Authentication
JWT_SECRET="your-jwt-secret-key"
JWT_EXPIRES_IN="7d"

# Security Settings
BCRYPT_ROUNDS=12
CORS_CREDENTIALS=true
TRUST_PROXY=1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"

# Monitoring
SENTRY_DSN=""
SENTRY_ENVIRONMENT="development"

# Optional Redis for caching
REDIS_URL="redis://localhost:6379"

# Health Check
HEALTH_CHECK_TOKEN=""