# ==============================================================================
# AI-TRPG Platform Frontend Environment Variables
# ==============================================================================
# 
# このファイルをコピーして `.env.local` ファイルを作成してください:
#   cp .env.example .env.local
# 
# Viteでは VITE_ プレフィックスが付いた変数のみがクライアントサイドで利用可能です。
# セキュリティ上重要な情報（APIキーなど）は絶対にフロントエンドに露出させないでください。
# ==============================================================================

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_WS_URL=ws://localhost:3000

# Production examples:
# VITE_API_URL=https://api.yourdomain.com/api
# VITE_WS_URL=wss://api.yourdomain.com

# Application Configuration
VITE_APP_NAME="AI-TRPG Platform"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Next-generation AI-driven TRPG platform"

# Feature Flags (Client-side)
VITE_ENABLE_DEBUG_MODE=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_CHAT_HISTORY=true
VITE_ENABLE_VOICE_INPUT=false

# Third-party Services (Public keys only)
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""

# UI Configuration
VITE_DEFAULT_THEME="dark"
VITE_ENABLE_THEME_SWITCHER=true
VITE_MAX_CHAT_HISTORY=100
VITE_AUTO_SAVE_INTERVAL=30000  # 30 seconds

# WebSocket Configuration
VITE_WS_RECONNECT_INTERVAL=5000  # 5 seconds
VITE_WS_MAX_RECONNECT_ATTEMPTS=10

# Development Configuration
VITE_MOCK_API=false
VITE_DEBUG_WEBSOCKET=false
VITE_DEBUG_STATE=false

# Performance Configuration
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false
VITE_CACHE_DURATION=3600000  # 1 hour

# Accessibility
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_REDUCED_MOTION=false

# Build Configuration
VITE_BUILD_TARGET="esnext"
VITE_SOURCEMAP=true

# ==============================================================================
# 本番環境固有の設定
# ==============================================================================

# Security (Production)
# VITE_CSP_NONCE=""
# VITE_ENABLE_HTTPS_ONLY=true

# Performance (Production)  
# VITE_ENABLE_COMPRESSION=true
# VITE_ENABLE_LAZY_LOADING=true

# Monitoring (Production)
# VITE_ERROR_BOUNDARY_FALLBACK=true
# VITE_PERFORMANCE_MONITORING=true